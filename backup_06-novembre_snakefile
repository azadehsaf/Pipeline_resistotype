rule unzip_sample:
    input:
        datain+"/{sample}_{mate}.fastq.gz"
    output:
        datain+"/{sample}_{mate}.fastq"
    shell:
        '''
        if [ ! -f {output} ]
        then
           gunzip -c {input} > {output} 
        fi
        '''


