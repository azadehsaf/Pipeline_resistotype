rule decom_DSRC_sample:
    input:
         datain+"/{sample}_{mate}.fastq.dsrc"    
    output:
         datain+"/{sample}_{mate}.fastq"   
    threads:4
    shell:
        "dsrc d -t{threads} -s {input} > {output}"


